---
layout: default
---
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>

<div class="post">
  <header class="post-header">
     <div class="clearfix">
        <div class="slider">
          <swiper-container
            class="hero-swiper"
            loop="true"
            autoplay="true"
            autoplay-delay="5000"
            autoplay-disable-on-interaction="false"
            pagination="true"
            style="width:100%; height:auto;"
          >
            {% assign base = "/assets/img/slides/" %}
            {% for file in page.slide %}
              <swiper-slide>
                <img
                  src="{{ base | append: file | relative_url }}"
                  alt="{{ site.title }} – slide {{ forloop.index }}"
                />
              </swiper-slide>
            {% endfor %}
          </swiper-container>
        </div>

      <h1 class="post-title">
        {% if site.title == 'blank' %}
          <span class="font-weight-bold">{{ site.first_name }}</span>
          {{ site.middle_name }} {{ site.last_name }}
        {% else %}
          {{ site.title }}
        {% endif %}
      </h1>
    </div>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <div class="recent-pub">
      <!-- ▼ second gallery: cover-flow ▼ -->
      <swiper-container
        class="coverflow-swiper"
        effect="coverflow"                     
        loop="true"
        centered-slides="true"
        slides-per-view="3"
        breakpoints='{
          "0":   { "slidesPerView": 1 },
          "640": { "slidesPerView": 2 },
          "1024":{ "slidesPerView": 3 }
        }'
        grab-cursor="true"
        autoplay="true"
        autoplay-delay="3000"
        autoplay-disable-on-interaction="false"
        pagination="true"
        initial-slide="3"

        coverflow-effect-rotate="50"
        coverflow-effect-stretch="0"
        coverflow-effect-depth="100"
        coverflow-effect-modifier="1"
        coverflow-effect-slide-shadows="true"

        style="width:100%;height: auto;"
      >
        {% assign base = "/assets/img/recentPub/" %}
        {% for file in page.recentPub %}
          <swiper-slide>
            <a
              href="https://vida-lab.org/publications/"
              target="_blank"
              rel="noopener noreferrer">
            <div class="slide-item">
              <img
                src="{{ base | append: file | relative_url }}"
                alt="{{ site.title }} – slide {{ forloop.index }}"
              />
              <div>
                <h3 class="pub-title">{{ file | split: '.' | first }}</h3>
                <p>{{ page.recentPubDescription[forloop.index0] }}</p>
              </div>
            </div>
            </a>
          </swiper-slide>
        {% endfor %}
  </div>
      </swiper-container>

        </div>

<!-- Recruitment Block Start -->
<div class="vida-recruitment-block">
  {% comment %} <div class="vida-recruitment-header">
    🚀 Join VIDA Lab!
  </div> {% endcomment %}
  <div class="vida-recruitment-body">
    We are actively looking for self-motivated and passionate <b>Ph.D./M.Eng students</b>, <b>research assistants</b>, and <b>visiting interns</b> interested in
    <span class="vida-keywords">Data Visualization</span>,
    <span class="vida-keywords">Visual Analytics</span>, and
    <span class="vida-keywords">Human-Computer Interaction</span>.
    <div class="vida-recruitment-contact">
      📧 <b>Interested?</b> Email your CV, transcripts, and relevant documents to
      <a href="mailto:yong-wang@ntu.edu.sg">yong-wang@ntu.edu.sg</a>
    </div>
  </div>
</div>
<!-- Recruitment Block End -->



    <!-- News -->
    {% if page.announcements and page.announcements.enabled %}
      <h2>
        <a href="{{ '/news/' | relative_url }}" style="color: inherit">News</a>
      </h2>
      {% include news.liquid limit=true %}
      <p><a href="{{ '/news/' | relative_url }}" style="color: inherit">Read More ...</a></p>
    {% endif %}

    <!-- Latest posts -->
    {% if page.latest_posts and page.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">latest posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Selected papers -->
    {% if page.selected_papers %}
      <h2>
        <a href="{{ '/publications/' | relative_url }}" style="color: inherit">selected publications</a>
      </h2>
      {% include selected_papers.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>

<style>
.slider{
  margin-bottom : 3em;
}
.hero-swiper {
  max-width: 100%;
  margin: 0 auto;
}
.hero-swiper img {
  display: block;
  width: 100%;
  height: auto;
  object-fit: cover;
}
/* add to your custom CSS / SCSS */
.coverflow-swiper img {
  width: 100%;          /* each “card” width */
  height: 200px;
  object-fit: fill; /* fill, cover, contain */
  display: block;
}

.recent-pub {
  margin: 2em 0;
}
/* slide 作为定位上下文 */
.slide-item { position: relative; }

/* 宽版居中的标题条 */
.pub-title{
  position: absolute;
  bottom: 10%;                     /* 向上抬 80 px */
  left: 50%;
  transform: translateX(-50%);      /* 保证真正居中 */
  width: calc(100% - 2rem);         /* 减去左右各 1 rem 的留白 */
  
  /* 视觉样式 */
  background: rgba(255,255,255,.25);
  backdrop-filter: blur(6px) saturate(120%);
  -webkit-backdrop-filter: blur(6px) saturate(120%);
  border-radius: 0.75rem;           /* 圆角矩形 */
  padding: .45em 1.2em;
  box-shadow: 0 4px 14px rgba(0,0,0,.25);

  font-size: 1.15em;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 1.25;
  overflow-wrap: anywhere;          /* 长标题也不溢出 */
}

/* 如果图片普遍偏亮，可改为深色背景 + 浅文字 */
@media (prefers-color-scheme: light) {
  .pub-title{
    background: rgba(0,0,0,.4);
    color: #fff;
  }
}

/* 深色模式：标题条改成淡色半透明 + 深色文字 */
@media (prefers-color-scheme: dark) {
  .pub-title{
    background: rgba(0,0,0,.4);   /* 浅色半透明蒙版 */
    color: #fff;                      /* 深色文字，避免发灰 */
  }
}


/* ≤640 px：标题更小、内边距略减 */
@media (max-width:640px){
  .pub-title{
    font-size: .9em;
    padding: .35em .8em;
  }
}

.vida-recruitment-block {
  margin: 0.5em 0 1.5em 0; 
  padding: 0.8rem 1rem 0.8rem 1rem; 
  background: linear-gradient(90deg, #e0e7ff 0%, #f0fdfa 100%);
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(60,60,120,0.10);
  border-left: 7px solid #6366f1;
  border-right: 2px solid #a5b4fc;
  width: 100%;
  box-sizing: border-box;
  font-family: 'Segoe UI', 'Helvetica Neue', Arial, 'Liberation Sans', sans-serif;
  animation: fadeInRecruit 1.2s;
}
.vida-recruitment-header {
  color: #3730a3;
  font-size: 1.2rem;
  font-weight: 800;
  letter-spacing: 1px;
  margin-bottom: .7rem;
  text-align: left;
}
.vida-recruitment-body {
  font-size: 1rem;
  color: #22223b;
  margin-bottom: 0rem;
  text-align: left;
}
.vida-recruitment-body ul {
  font-size: 1.05rem;
  color: #373737;
  margin-bottom: 1rem;
  padding-left: 1.3em;
  margin-top: .7em;
}
.vida-recruitment-contact {
  font-size: 1rem;
  color: #3730a3;
  margin-top: 0.5em;
  text-align: left;
}
.vida-recruitment-contact a {
  color: #2563eb;
  text-decoration: underline;
  font-weight: 500;
}
.vida-keywords {
  background: #c7d2fe;
  color: #3730a3;
  border-radius: 0.4em;
  padding: 0.08em 0.38em;
  margin: 0 0.08em;
  font-weight: 600;
  font-size: 1em;
  display: inline-block;
}
@media (max-width: 700px) {
  .vida-recruitment-block {
    padding: 1.2rem 0.7rem 1rem 0.7rem;
  }
  .vida-recruitment-header {
    font-size: 1.3rem;
  }
}
@keyframes fadeInRecruit {
  from { opacity: 0; transform: translateY(30px);}
  to { opacity: 1; transform: translateY(0);}
}


</style>